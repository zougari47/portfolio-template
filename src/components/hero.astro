---
import { Image } from 'astro:assets'
import { fullName, rotatingWords } from '@/data.json'
import MyPicture from '@/assets/me.webp'

const words = [...rotatingWords, rotatingWords[0]]

const classMap = {
  1: 'text-red-600',
  2: 'text-blue-600',
  3: 'text-yellow-600',
  4: 'text-purple-600',
  5: 'text-orange-600',
}
---

<section class='min-h-screen bg-white dark:bg-gray-900'>
  <div
    class='mx-auto grid max-w-screen-xl px-4 py-8 lg:grid-cols-12 lg:gap-8 lg:py-16 xl:gap-0'>
    <div class='mr-auto place-self-center lg:col-span-6'>
      <h1
        class='mb-4 max-w-2xl text-4xl font-extrabold leading-none tracking-tight md:text-5xl xl:text-6xl dark:text-white'>
        <span>I'm {fullName.split(' ')[0]} and I </span>
        <span>specialize in</span>
      </h1>
      <div class='mb-6 text-3xl font-extrabold [text-wrap:balance] md:text-6xl'>
        <span
          class='via inline-flex h-[calc(theme(fontSize.3xl)*theme(lineHeight.tight))] flex-col overflow-hidden bg-primary-500 bg-gradient-to-tr from-primary-700 to-primary-400 bg-clip-text text-transparent md:h-[calc(theme(fontSize.6xl)*theme(lineHeight.tight))]'>
          <ul
            class='block animate-text-slide text-left leading-tight [&_li]:block'>
            {
              words.map((word, i) => (
                <li
                  {...(word === words.at(-1) && i > 0
                    ? { 'aria-hidden': 'true' }
                    : {})}>
                  {word}
                </li>
              ))
            }
          </ul>
        </span>
      </div>
      <a
        href='#'
        class='mr-3 inline-flex items-center justify-center rounded-lg bg-primary-700 px-5 py-3 text-center text-base font-medium text-white hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-900'>
        Hire Me
        <svg
          class='-mr-1 ml-2 h-5 w-5'
          fill='currentColor'
          viewBox='0 0 20 20'
          xmlns='http://www.w3.org/2000/svg'
          ><path
            fill-rule='evenodd'
            d='M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z'
            clip-rule='evenodd'></path></svg
        >
      </a>
      <a
        href='#'
        class='inline-flex items-center justify-center rounded-lg border border-gray-300 px-5 py-3 text-center text-base font-medium text-gray-900 hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 dark:border-gray-700 dark:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-800'>
        Projects
      </a>
    </div>
    <div class='relative hidden lg:col-span-6 lg:mt-0 lg:flex'>
      <div class='gradient-overlay'></div>
      <div class='mx-auto w-4/5'>
        <Image src={MyPicture} alt={`${fullName} picture`} />
      </div>
    </div>
  </div>
</section>

<style>
  .gradient-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 20%;
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0),
      rgba(255, 255, 255, 1)
    );
  }
</style>
