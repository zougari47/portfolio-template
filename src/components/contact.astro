---
import { contact } from '@/data.json'
---

<section id='contact' class='min-h-screen'>
  <h2 class='mb-6 mt-8 text-center text-4xl'>CONTACT ME</h2>
  <div class='grid grid-cols-1 md:grid-cols-12'>
    <div
      class='col-span-12 mb-4 grid content-start md:col-span-4'
      data-aos='fade-right'
      data-aos-duration='1000'>
      <h3 class='text-3xl'>Ready to Innovate?</h3>
      <p class='text-lg'>Let's Bring Your Vision to Life!</p>

      <div class='more_info mt-5'>
        <dl class='mt-8'>
          <div class='mb-3 flex gap-2'>
            <dt>
              <svg
                xmlns='http://www.w3.org/2000/svg'
                width='24'
                height='24'
                viewBox='0 0 24 24'
                fill='none'
                stroke='currentColor'
                stroke-width='2'
                stroke-linecap='round'
                stroke-linejoin='round'
                class='size-6'
                ><rect width='20' height='16' x='2' y='4' rx='2'></rect><path
                  d='m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7'></path></svg
              >
            </dt>
            <dd>{contact.email}</dd>
          </div>
          <div class='flex gap-2'>
            <dt>
              <svg
                xmlns='http://www.w3.org/2000/svg'
                width='24'
                height='24'
                viewBox='0 0 24 24'
                fill='none'
                stroke='currentColor'
                stroke-width='2'
                stroke-linecap='round'
                stroke-linejoin='round'
                class='size-6'
                ><path d='M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z'
                ></path><circle cx='12' cy='10' r='3'></circle></svg
              >
            </dt>
            <dd>{contact.location}</dd>
          </div>
        </dl>
        <p>
          <i class='bi bi-geo-alt text-accent fs-5 me-2'></i>
          <!-- {location} -->
        </p>

        <p>
          <i class='bi bi-envelope-fill text-accent fs-5 me-2'></i>
          <!-- {email} -->
        </p>
      </div>
    </div>

    <div class='col-span-12 md:col-span-8'>
      <form>
        {/* Name */}
        <div class='mb-6'>
          <label
            for='large-input'
            class='mb-2 block text-sm font-medium text-gray-900 dark:text-white'
            >Large input</label
          >
          <input
            type='text'
            id='large-input'
            class='block w-full rounded-lg border border-gray-300 bg-gray-50 p-4 text-base text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500'
          />
        </div>

        {/* Email */}
        <div class='mb-6'>
          <label
            for='large-input'
            class='mb-2 block text-sm font-medium text-gray-900 dark:text-white'
            >Large input</label
          >
          <input
            type='text'
            id='large-input'
            class='block w-full rounded-lg border border-gray-300 bg-gray-50 p-4 text-base text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500'
          />
        </div>

        {/* Message */}
        <div class='mb-4'>
          <label
            for='message'
            class='mb-2 block text-sm font-medium text-gray-900 dark:text-white'
            >Your message</label
          >
          <textarea
            id='message'
            rows='8'
            class='block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500'
            placeholder='Write your thoughts here...'></textarea>
        </div>

        <div>
          <button
            type='button'
            class='rounded-lg bg-blue-700 px-5 py-3 text-center text-base font-medium text-white hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800'
            >Send

            <svg
              xmlns='http://www.w3.org/2000/svg'
              fill='none'
              viewBox='0 0 24 24'
              stroke-width='1.5'
              stroke='currentColor'
              class='inline size-6'>
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5'
              ></path>
            </svg>
          </button>
        </div>
      </form>
    </div>
  </div>
</section>
